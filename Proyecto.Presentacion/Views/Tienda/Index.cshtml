
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h1>Index</h1>

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <!-- Custom fonts for this template -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/estilos.css" asp-append-version="true" />

    <!-- Sweetalert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
            crossorigin="anonymous"></script>
    <link href="~/Content/estilo.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="menu">
            <ul>
                <li>@Html.ActionLink("PRINCIPAL", "Index", "Home")</li>
                <li>
                    CLIENTE
                    <ul>

                        <li>LISTADO GENERAL</li>
                        <li>NUEVO CLIENTE</li>
                    </ul>
                </li>
                <li>
                    ORDEN DE COMPRA

                    <ul>

                        <li>LISTADO ORDENES DE COMPRA</li>
                        <li>GENERAR ORDEN DE COMPRA</li>
                    </ul>
                </li>
                <li>
                    VENTA
                    <ul>

                        <li>
                            @Html.ActionLink("GENERAR VENTA", "carritoCompras",

                                     "Tienda")
                        </li>
                        <li>LISTADO DE FACTURAS</li>
                    </ul>
                </li>
                <li>
                    PRODUCTO
                    <ul>

                        <li>LISTADO GENERAL</li>
                        <li>NUEVO PRODUCTO</li>
                    </ul>
                </li>
                <li>
                    VENDEDOR
                    <ul>
                        <li>LISTADO GENERAL</li>
                        <li>NUEVO VENDEDOR</li>
                    </ul>
                </li>
                <li>
                    PROVEEDOR
                    <ul>

                        <li>
                            @Html.ActionLink("LISTADO GENERAL", "proveedores",
                                     "Ventas")
                        </li>
                        <li>@Html.ActionLink("NUEVO PROVEEDOR", "Agregar", "Ventas")</li>
                    </ul>
                </li>
            </ul>
        </nav>
    </header>
    <figure>
        <img id="banner" src="~/Imagenes/banner_libreria.jpg" />
    </figure>
    <h2 id="titulo">SISTEMA DE GESTION PARA LIBRERIA</h2>
    @RenderBody()
    <footer>
        <h6>Todos los derechos reservados - Lic. Manuel Torres Re.</h6>
    </footer>
    @RenderSection("scripts", required: false)

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
</body>
</html>