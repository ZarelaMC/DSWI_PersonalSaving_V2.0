@model FRONT_web_personal_saving.Models.EgresoModelO

@{
    ViewData["Title"] = "ModificarEgreso";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<div class="container-fluid col-xl-12">

    <div style="display: flex; justify-content: center; margin-bottom: 20px;">
        <h1>MODIFICAR MIS EGRESOS</h1>
    </div>


    <hr />
    <div class="row">
        <!-- Formulario de Egresos -->
        <div class="col-xl-5 col-md-5 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <form asp-action="ModificarEgreso">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="id" class="control-label"></label>
                            <input asp-for="id" class="form-control" readonly />
                            <span asp-validation-for="id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="id_usuario" class="control-label"></label>
                            <input asp-for="id_usuario" class="form-control" />
                            <span asp-validation-for="id_usuario" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="fecha" class="control-label"></label>
                            <input asp-for="fecha" class="form-control" type="date" />
                            <span asp-validation-for="fecha" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="monto" class="control-label"></label>
                            <input asp-for="monto" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="monto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="descripcion" class="control-label"></label>
                            <textarea class="form-control" asp-for="descripcion" rows="7" placeholder="Escribe aquí los detalles de tu egreso que desees recordar"></textarea>
                            <span asp-validation-for="descripcion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div style="display: flex; justify-content: center;">
                                <input type="submit" value="Actualizar" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!--  Imágen -->
        <div class="col-xl-7 col-md-7">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">

                    <h1 class="h5 mb-3 text-gray-800" style="text-align:center">¡Registra tus ingresos y toma el control de tus finanzas! </h1>
                    <img style="width:80%; margin:-65px 10% -40px 10%;" src="~/img/egresos.png" alt="Sé constante en el registro de tus ingresos" />


                    <div>
                        <ul class="list-group">
                            <li class="list-group-item">🧩¡Cada gasto es una pieza importante en el puzzle de tus finanzas, no lo dejes fuera!</li>
                            <li class="list-group-item">🔍¡Prestar atención a tus gastos es el primer paso hacia la libertad financiera!</li>
                            <li class="list-group-item">⏳¡Dedica unos minutos al día para registrar tus egresos y construir un futuro financiero sólido!</li>
                            <li class="list-group-item">📉¡Controla tus egresos, ajusta tus gastos y alcanza tus metas con claridad y propósito!</li>
                            <li class="list-group-item">🚀¡Hacer seguimiento a tus gastos no tiene por qué ser complicado: manténlo simple y efectivo!</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    if ('@ViewBag.mensaje' != "") {
        Swal.fire({
            title: '@ViewBag.mensaje',
            text: "Para continuar, presiona el botón",
            icon: "success"
        });
    }
</script>